<body>
    <div class="container-fluid">
        <div class="dashboard-wrapper">
            <div class="main-container">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="widget no-margin">
                            <div class="widget-body">
                                
                                <div id="dt_example" class="example_alt_pagination">
                                    
                                    <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="data-table">
                                        
                                        <thead>
                                            <tr>
                                                <th style="width:10%" class="hidden-phone">MovieID</th>
                                                <th style="width:20%">Movie Name</th>
                                                <th style="width:25%">Movie Genre</th>
                                                <th style="width:15%" class="hidden-phone">Release Date</th>
                                                <th style="width:15%" class="hidden-phone">Rating</th>
                                                <th style="width:15%" class="hidden-phone">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr class="gradeX">
                                                <td>@item.MovieID</td>
                                                <td>@item.MovieName</td>
                                                <td>@item.MovieGenre</td>
                                                <td class="hidden-phone">
                                                @{var month = item.ReleaseDate.ToString("MMMM", CultureInfo.InvariantCulture);}
                                                @item.ReleaseDate.Day @month @item.ReleaseDate.Year</td>
                                                <td class="hidden-phone">@item.Rating</td>
                                                <td class="hidden-phone">
                                                    @Html.ActionLink("Edit","Edit","Movies", new { id = item.MovieID }, new {@class= "btn btn-success btn-small hidden-phone"})
                                                    @Html.ActionLink("Delete", "Delete", "Movies" , new { id = item.MovieID }, new { @class = "btn btn-small btn-primary hidden-tablet hidden-phone" })
                                                </td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <style>
                #addnew{
                    width:150px;
                }
            </style>
            <br />
            @Html.ActionLink("Add New Movie","Add","Movies",new {@class="btn btn-large btn-warning2 btn-block", id="addnew"})
        </div>
    </div>
    
</body>
</html>









