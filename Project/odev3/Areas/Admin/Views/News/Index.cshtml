<body>
    <div class="container-fluid">
        <div class="dashboard-wrapper">
            <div class="main-container">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="widget no-margin">
                            <div class="widget-body">
                                <div id="dt_example" class="example_alt_pagination">
                                    <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="data-table">
                                        <thead>
                                            <tr>
                                                <th style="width:4%">ID</th>
                                                <th style="width:22%">Header</th>
                                                <th style="width:20%" class="hidden-phone">Main Idea</th>
                                                <th style="width:28%" class="hidden-phone">All The News</th>
                                                <th style="width:8%" class="hidden-phone">News Date</th>
                                                <th style="width:8%" class="hidden-phone">MovieID</th>
                                                <th style="width:10%" class="hidden-phone">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr class="gradeX">
                                                    <td>@item.NewsID</td>
                                                    <td>@item.NewsHeader</td>
                                                    <td class="hidden-phone">@item.NewsFirstParagraph</td>
                                                    <td class="hidden-phone">@item.AllOfTheNews</td>
                                                    <td class="hidden-phone">
                                                        @{var month = item.NewsDate.ToString("MMMM", CultureInfo.InvariantCulture);}
                                                        @item.NewsDate.Day @month @item.NewsDate.Year
                                                    </td>
                                                    <td class="hidden-phone">@item.MovieID</td>
                                                    <td class="hidden-phone">
                                                        @Html.ActionLink("Edit", "Edit", "News", new { id = item.NewsID }, new { @class = "btn btn-success btn-small hidden-phone" })
                                                        @Html.ActionLink("Delete", "Delete", "News", new { id = item.NewsID }, new { @class = "btn btn-small btn-primary hidden-tablet hidden-phone" })
                                                        <div id="accSettings1" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                                    ×
                                                                </button>
                                                                <h4 id="myModalLabel1">
                                                                    Edit client details
                                                                </h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="row-fluid">
                                                                    <div class="span4">
                                                                        <input type="text" class="span12" placeholder="Frist name">
                                                                    </div>
                                                                    <div class="span4">
                                                                        <input type="text" class="span12" placeholder="Last name">
                                                                    </div>
                                                                    <div class="span4">
                                                                        <input type="text" class="span12" placeholder="email">
                                                                    </div>
                                                                </div>
                                                                <div class="row-fluid">
                                                                    <div class="span4">
                                                                        <input type="text" class="span12" placeholder="Contact">
                                                                    </div>
                                                                    <div class="span8">
                                                                        <input type="text" class="span12" placeholder="Address">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button class="btn" data-dismiss="modal" aria-hidden="true">
                                                                    Close
                                                                </button>
                                                                <button class="btn btn-primary">
                                                                    Save changes
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                            }
                                        </tbody>
                                    </table>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <style>
                #addnew {
                    width: 150px;
                }
            </style>
            <br />
            @Html.ActionLink("Add New News", "Add", "News", new { @class = "btn btn-large btn-warning2 btn-block", id = "addnew" })
        </div>

    </div>

</body>
</html>


